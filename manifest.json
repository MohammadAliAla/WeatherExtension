{
  "manifest_version": 2,
  "name": "Weather Extension",
  "description": "Get weather information of your city or your current location.",
  "version": "1.0.0",
  "permissions": [
    "geolocation",
    "https://api.openweathermap.org/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
